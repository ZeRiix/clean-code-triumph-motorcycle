{
	"extends": [
		"@vue/tsconfig/tsconfig.dom.json",
		"../tsconfig.json"
	],
	"include": [
		"src/**/*",
		"src/**/*.vue",
		"*.d.ts",
		"vite.config.ts",
		"postcss.config.js"
	],
	"compilerOptions": {
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": [
				"vue/src/*"
			]
		}
	},
}