generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


enum BikeModelType {
	roadster
	trail
	sport
	touring
}

model BikeModel {
	name String @unique
	type BikeModelType
	interviewIntervalByKillometers Int
	interviewIntervalByDay Int
	Bike Bike[]
}

model Bike {
	vin String @unique
	BikeModel BikeModel @relation(fields: [modelName], references: [name])
	modelName String
	registration String
	factoryYear Int
	mileage Int
	purchaseDate DateTime
	stillInCirculation Boolean
	lastInterviewDate DateTime
}